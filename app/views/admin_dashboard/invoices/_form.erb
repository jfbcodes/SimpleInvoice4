<div class="row">
  <div class='col-md-1' >  
    <span class='<%= "alert-danger" if invoice.errors.details.keys.include?(:number) %>'  style="display: inherit;"  >
        <%= f.text_field :number, value: @invoice.number, autocomplete: 'off', size: 40, class: 'form-control', type: '' %>
       
      
      <label class='small form-text text-muted'>Number</label>
    </span>
    <br />
  </div>

  <div class="col-md-2">
    <%= link_to "Cancel", admin_dashboard_user_invoices_path,  {class: "btn btn-secondary"} %>
    <%= f.submit "Save", class: "btn btn-primary pull-right" %>
  </div>
</div>
